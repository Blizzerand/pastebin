<% provide(:title, "Paste it!") %>
<h1>Paste it!</h1>
<h2> It's really that easy! </h2>

<div class="row">
  <div class="span8 offset0 ">
  	<%= form_for(@page) do |f| %>
      <%= render 'shared/errors' %>

      <%= f.label :title %>
      <%= f.text_field :title %>
      
      <%= f.label :content %>
      <%= f.text_area :content, class: "text-field" %>

  	  <%= f.label :name, "Name(Optional)" %>
  	  <%= f.text_field :name  %>

  	  <%= f.submit "Submit", class: 'btn btn-secondary btn-large center' %>

  	<% end %>
 </div>
</div>


